<Window x:Class="chatclient_windows.ChooseNicknameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:chatclient_windows"
        mc:Ignorable="d"
        Title="ChooseNicknameWindow" Height="135" Width="215">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="10,37,0,0" TextWrapping="Wrap" Text="{Binding Nickname}" VerticalAlignment="Top" Width="187"/>
        <Button Click="ChooseNickname" Content="Choose" HorizontalAlignment="Left" Margin="112,65,0,0" VerticalAlignment="Top" Width="85"/>
        <TextBlock Text="Choose nickname:" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="-0.297,1.632" Height="22" HorizontalAlignment="Left" Width="187"/>

    </Grid>
</Window>
